pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'cloudacademydevops/stocks-api'
        TAG = 'latest'
    }

    tools {
        dockerTool 'docker-latest'
    }

    stages {
        stage('Docker Build') {
            agent any
            steps {
                sh "docker build -t ${DOCKER_IMAGE}:r${env.BUILD_NUMBER} ."
            }
        }

        stage('Docker Push') {
            agent any
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'dockerHubUser', passwordVariable: 'dockerHubPassword')]) {
                    sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
                    sh "docker push ${DOCKER_IMAGE}:r${env.BUILD_NUMBER}"
                }
            }
        }
        
        stage('Manifest Update') {
            agent any
            steps {
                echo "triggering updatemanifestjob"
                build job: 'ManifestUpdate', parameters: [string(name: 'DOCKERTAG', value: env.BUILD_NUMBER)]
            }
        }
    }
}